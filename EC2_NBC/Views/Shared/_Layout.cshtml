<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EC2_NBC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <link href="~/css/NCBStyleSheet.css" rel="stylesheet" />
</head>
<body>
    <form>
        <div class="wrapper">
            <div class="menu">
                <ul>
                    <li class="navigation_first_item"><a>Home</a></li>
                    <li><a>Contact</a></li>
                    <li></li>
                </ul>
            </div>
            <div class="clear"></div>
            <div class="content">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <div class="clear"></div>
            <footer>
                <div class="footer">
                    <h2>Copyright &copy; National Commercial Bank @DateTime.Now.Year</h2>
                </div>
            </footer>
        </div>
    </form>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
