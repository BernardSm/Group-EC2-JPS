@model BNS.ViewModels.LoginViewModel

@{
    ViewBag.Title = "User Login";
}


<div class="row">
    <div id="content" class="col-sm-9">
        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <h2>New Customer</h2>
                    <p><strong>Register Account</strong></p>
                    <p>By creating an account you will be able to shop faster, be up to date on an order's status, and keep track of the orders you have previously made.</p>
                    <a asp-action="register" asp-controller="account" class="btn btn-primary">Continue</a>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="well">
                    <h2>Returning Customer</h2>
                    <p><strong>I am a returning customer</strong></p>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="userEmail"></label>
                            <input asp-for="userEmail" class="form-control" />
                            <span asp-validation-for="userEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="userPassword" class="control-label"></label>
                            <input asp-for="userPassword" class="form-control" />
                            <span asp-validation-for="userPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="userRememberMe">
                                    <input asp-for="userRememberMe" />
                                    @Html.DisplayNameFor(m => m.userRememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
