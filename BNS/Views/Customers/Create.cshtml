@model BNS.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<h1>Registration</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">

            <br />
            <h5>Presonal Information</h5>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetName" class="control-label"></label>
                <input asp-for="StreetName" class="form-control" />
                <span asp-validation-for="StreetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parish" class="control-label"></label>
                <input asp-for="Parish" class="form-control" />
                <span asp-validation-for="Parish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <br />
            <h5>Credentials</h5>
            <hr />

            <div class="form-group">
                <label asp-for="userEmail" class="control-label"></label>
                <input asp-for="userEmail" class="form-control" />
                <span asp-validation-for="userEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userPassword" class="control-label"></label>
                <input asp-for="userPassword" class="form-control" />
                <span asp-validation-for="userPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userConfirmedPassword" class="control-label"></label>
                <input asp-for="userConfirmedPassword" class="form-control" />
                <span asp-validation-for="userConfirmedPassword" class="text-danger"></span>
            </div>

            <br />
            <h5>Card Information</h5>
            <hr />

            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input id='accNum' asp-for="AccountNumber" class="form-control" />
                <button onclick="genAccButton();" class="btn btn-primary">Generate</button>
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input id="cardNum" asp-for="CardNumber" class="form-control" />
                <button onclick="genCardButton();" class="btn btn-primary">Generate</button>
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <br />
                <select asp-for="AccountType" class="dropdown">
                    <option class="dropdown-item-text">Saving</option>
                    <option class="dropdown-item-text">Checking</option>
                </select>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
    function randIntr(Hl, Ll) {
        return Math.floor(Math.random() * (Hl - Ll + 1)) + Ll;
    }

    var accButton = document.getElementById("accNum");
    function genAccButton() {
        accButton.value = randIntr(1000000, 9999999);
    }

    var cardButton = document.getElementById("cardNum");
    function genCardButton() {
        cardButton.value = randIntr(400100000000, 400199999999);
    }
</script>
